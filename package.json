{
	"name": "codefolio",
	"version": "1.4.9",
	"private": true,
	"type": "module",
	"scripts": {
		"setup": "concurrently \"bun install\" \"cd server && bun install\"",
		"app": "concurrently \"bun run server\" \"vite\" ",
		"dev": "vite --host",
		"build": "vite build",
		"build:server": "cd server && bun build ./server.js --outdir ./dist --target=node --minify-whitespace --minify-identifiers --minify-syntax",
		"build:local": "vite build && vite preview",
		"preview": "vite preview",
		"prettier": "prettier --write \"src/**/*.{js,ts,vue,json,md}\"",
		"server": "cd server && bun run server",
		"deploy": "concurrently \"vercel --prod\" \"cd server && vercel --prod\" \"bun run docker\"",
		"deploy:all": "concurrently \"bun run deploy\" \"vite build\" \"bun run build:server\"",
		"docker": "docker-compose up -d --build && docker stop codefolio-frontend-1 codefolio-backend-1'"
	},
	"dependencies": {
		"@formkit/auto-animate": "^0.8.2",
		"axios": "^1.11.0",
		"chart.js": "^4.5.0",
		"concurrently": "^9.2.0",
		"core-js": "^3.44.0",
		"dotenv": "^17.2.0",
		"eslint-plugin-security": "^3.0.1",
		"html2canvas-pro": "^1.5.11",
		"html2pdf.js": "^0.9.3",
		"jspdf": "^3.0.1",
		"lodash-es": "^4.17.21",
		"markdown-it": "^14.1.0",
		"marked": "^16.1.1",
		"quill": "^2.0.3",
		"shepherd.js": "^14.5.0",
		"vue": "^3.5.18",
		"vue-i18n": "^11.1.11",
		"vue-router": "^4.5.1",
		"vue-virtual-scroller": "^2.0.0-beta.8",
		"vue3-google-login": "^2.0.33",
		"vuetify": "^3.9.2"
	},
	"devDependencies": {
		"@mdi/font": "^7.4.47",
		"@tauri-apps/cli": "^2.7.1",
		"@vitejs/plugin-vue": "^6.0.0",
		"@vue/eslint-config-prettier": "^10.2.0",
		"eslint": "^9.31.0",
		"eslint-plugin-vue": "^10.3.0",
		"prettier": "^3.6.2",
		"prettier-eslint": "^16.4.2",
		"rollup": "^4.45.1",
		"vite": "^7.0.5",
		"vite-plugin-mkcert": "^1.17.8",
		"vue-eslint-parser": "^10.2.0"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true,
			"browser": true,
			"es2021": true
		},
		"extends": [
			"eslint:recommended",
			"@vue/eslint-config-prettier",
			"plugin:vue/vue3-essential",
			"plugin:security/recommended"
		],
		"parserOptions": {
			"ecmaVersion": 2021,
			"sourceType": "module"
		},
		"rules": {
			"indent": [
				"error",
				"tab"
			],
			"semi": [
				"error",
				"never"
			],
			"quotes": [
				"error",
				"double"
			],
			"no-console": "off",
			"no-debugger": "warn",
			"vue/multi-word-component-names": "off",
			"vue/no-reserved-component-names": "off"
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not dead",
		"not ie 11"
	]
}
